{
  "name": "rag-poc",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot run src/index.ts",
    "type-check": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "lint-check": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "@types/express": "5.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "4.21.2",
    "joi": "17.13.3"
  }
}
