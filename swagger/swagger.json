{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "RAG Proof of Concept",
    "description": "API documentation"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/upload": {
      "post": {
        "summary": "Upload a file (PDF or TXT)",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "document",
            "in": "formData",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "File uploaded successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "File uploaded"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "summary": "Search",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The search query"
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "schema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string",
                  "example": "example query"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Query parameter is required",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Query parameter is required"
                }
              }
            }
          }
        }
      }
    }
  }
}
